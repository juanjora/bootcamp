//Ejercicios Tema 4 - IF

public class Main {
    public static void main(String[] args) {
        int numeroIf = 3;

        if (numeroIf > 0) {
            System.out.println("Es positivo");
        } else if (numeroIf < 0) {
            System.out.println("Es negativo");
        } else {
            System.out.println("Es cero");
        }
    }
}




//Ejercicios Tema 4 - WHILE

public class Main {
    public static void main(String[] args) {
        int numeroWhile = 1;

        while (numeroWhile < 3) {
            numeroWhile = numeroWhile + 1;
            System.out.println(numeroWhile);
        }
    }
}



//Ejercicios Tema 4 - WHILE DO (La condición while solo se ejecuta una vez)

public class Main {
    public static void main(String[] args) {
        int numeroWhile = 1;

        do {
            numeroWhile = numeroWhile + 1;
            System.out.println(numeroWhile);
        } while (numeroWhile < 3);

    }
}



//Ejercicios Tema 4 - FOR

public class Main {
    public static void main(String[] args) {

        for (int numeroFor = 0; numeroFor <= 3; numeroFor = numeroFor + 1) {
            System.out.println(numeroFor);
        }
    }
}



//Ejercicios Tema 4 - SWITCH

public class Main {
    public static void main(String[] args) {
        var estacion = "VERANO";

        switch (estacion) {
            case "VERANO":
                System.out.println("Es verano");
                break;
            case "OTOÑO":
                System.out.println("Es otoño");
                break;
            case "INVIERNO":
                System.out.println("Es invierno");
                break;
            case "PRIMAVERA":
                System.out.println("Es primavera");
                break;
            default:
                System.out.println("No es una estación");
        }
    }
}
